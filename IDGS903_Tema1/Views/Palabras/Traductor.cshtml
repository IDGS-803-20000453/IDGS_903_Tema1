@model IDGS903_Tema1.Models.Traductor

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.Opcion, "ingles") Inglés
                @Html.RadioButtonFor(model => model.Opcion, "espagnol") Español
            </div>
        </div>
        <div class="row">
            <div class="form-group mt-4">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.textWord, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.textWord, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-offset-2 col-md-10 mt-4">
                    <input type="submit" value="Traducir" class="btn btn-success" />

                    <div class="col-md-offset-2 col-md-4">
                        <a href="~/Palabras/LeerPalabra" type="button" class="btn btn-default btn btn-secondary"> Mostrar </a>
                        <a href="~/Palabras/Registrar" type="button" class="btn btn-default btn btn-outline-secondary"> Registrar Palabra </a>

                    </div>

                    

                </div>
            </div>
        </div>
        <h3 class="mt-4"> @TempData["Resultado"]</h3>
    </div>
}